@{
    ViewBag.Title = "Clube LG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script>
        $(document).ready(function () {
            $('#submit').parsley();
        });
    </script>
}

<div class="account-wrapper">
    <div class="account-body">

        <h3>Bem vindo ao YESHCAMP</h3>
        <h5>Favor realizar o login para continuar o acesso</h5>

        <form id="submit" data-validate="parsley" class="form account-form parsley-form" method="POST">

            <div class="form-group">
                <label for="login-username" class="placeholder-hidden">Email</label>
                <input type="text" class="form-control parsley-validated" data-required="true" name="username" id="login-username" placeholder="Email" tabindex="1">
            </div>

            <div class="form-group">
                <label for="login-password" class="placeholder-hidden">Senha</label>
                <input type="password" class="form-control parsley-validated" data-required="true" name="password" id="login-password" placeholder="Senha" tabindex="2">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg blockButton" tabindex="4">
                    Login &nbsp; <i class="fa fa-play-circle"></i>
                </button>
            </div>
        </form>
    </div>
</div>