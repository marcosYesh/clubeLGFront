@model MBLabs.LGClubeWebBackendWeb.Models.ReportUserMobileAnswerListModel

@using GridMvc.Html
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Clube LG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html {
        overflow-y: scroll;
    }
</style>

@section styles {
}

@section scripts {
}

<div class="container">
    <div class="portlet">
        <h3 class="portlet-title">
            <u>Relatório >> Repostas >> Usuário</u>
        </h3>

        <div class="portlet-body">
            <div id="table-1_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div id="div-results">
                    @Html.Grid(Model.ModelList).Columns(columns =>
                        {
                            columns.Add(model => model.UserMobileName).Titled("Usuário");
                            columns.Add(model => model.QuizTitle).Titled("Pergunta");
                            columns.Add(model => model.UserMobileAnswer).Titled("Resposta");
                            columns.Add(model => model.IsAnswerCorrect).Titled("Resposta Certa");
                            columns.Add(model => model.DtAnswer).Titled("Data Resposta");
                        })
                </div>
                @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("ReportListUserMobileAnswer", new { page }))
            </div>
        </div>

    </div>
</div>