@{
    ViewBag.Title = "Clube LG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account-wrapper">
    <div class="account-body">

      <h2>Recuperação de senha</h2>
      <h5>We will send instructions via email on how reperar your password.</h5>

      <form class="form account-form" method="POST" action="/esqueci">
        <div class="form-group">
          <label for="forgot-email" class="placeholder-hidden">Email</label>
          <input type="text" class="form-control" name="username" id="forgot-email" placeholder="Email" tabindex="1">
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-secondary btn-block btn-lg" tabindex="2">
            Recuperar a senha &nbsp; <i class="fa fa-refresh"></i>
          </button>
        </div>

        <div class="form-group">
          <a href="/entrar"><i class="fa fa-angle-double-left"></i> &nbsp;Voltar para o login</a>
        </div>
      </form>
    </div>
  </div>
